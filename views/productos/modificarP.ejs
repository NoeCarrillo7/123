<%- include("../templates/encabezado")%>
<%- include("../templates/menu")%>

<div class="container mt-5">
    <form action="/editarP" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h1>Modificar Producto</h1>
            </div>
            <div class="card-body">
                <input type="hidden" name="id" id="id" value="<%= prod.id%>">
                <input class="form-control mb-3" type="text" value="<%= prod.nombre%>" name="nombre" id="nombre" placeholder="Nombre" autofocus>
                <input class="form-control mb-3" type="text"  value="<%= prod.precio%>" name="precio" id="precio" placeholder="Precio">
                <input class="form-control mb-3" type="text"  value="<%= prod.descripcion%>" name="descripcion" id="descripcion" placeholder="Descripcion">
                <input class="form-control mb-3" type="file"  value="<%= prod.foto%>" name="foto" id="foto" >
            </div>
            <div class="card-footer">
                <button class="form-control btn btn-primary" type="submit">Modificar Producto</button>
            </div>
        </div>
    </form>
</div>

